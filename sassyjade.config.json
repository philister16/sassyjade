{
  "templ": {
      "src": [
        "src/templ/**/*.jade",
        "!src/templ/incl/*.jade",
        "!src/templ/mixin/*.jade",
        "!src/templ/layout/*.jade"
      ],
      "dest": "dist/views/"
  },
  "markdown": {
      "src": [
        "readme.md",
        "src/assets/docs/**/*.md"
      ],
      "dest": "dist/docs/"
  },
  "scripts": {
      "src": [
        "src/scripts/**/*.js"
      ],
      "dest": "dist/js/"
  },
  "styles": {
      "src": [
        "src/styles/**/*.{scss,styl}"
      ],
      "dest": "dist/css/"
  },
  "font": {
    "src": [
      "src/assets/font/**/*.{eot,svg,ttf,woff,woff2,otf}"
    ],
    "dest": "dist/font/"
  },
  "img": {
    "src": [
      "src/assets/img/**/*.{png,jpg,gif}"
    ],
    "dest": "dist/img/"
  },
  "files": {
    "src": [
      "src/assets/files/**/*"
    ],
    "dest": "dist/files/"
  },
  "option": {
  "messages": true,
  "pretty": true,
  "maps": true,
  "jsName": "main.js",
  "cssName": "main.css",
  "livereloadOn": true,
  "preprocessor": "sass"
  }
}